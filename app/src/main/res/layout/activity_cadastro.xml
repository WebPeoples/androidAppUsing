<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context="com.example.goku.using.activity.MenuActivity"
    android:padding="10dp"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_tela_cadastro" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingRight="10dp"
                    android:text="Dados pessoais"
                    android:textColor="@color/rosa"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/cadastro_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cadastro_style_edit_nome"
                    android:drawableLeft="@drawable/icone_nome"
                    android:drawablePadding="20dp"
                    android:hint="Nome"
                    android:inputType="text"
                    android:paddingBottom="0dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/cinza" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/cadstro_celular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/cadastro_style_edit_nome"
                        android:drawableLeft="@drawable/icone_celular"
                        android:drawablePadding="10dp"
                        android:hint="Celular"
                        android:inputType="phone"
                        android:paddingBottom="0dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/cinza" />
                </LinearLayout>



                <EditText
                    android:id="@+id/cadastro_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cadastro_style_edit_nome"
                    android:drawableLeft="@drawable/icone_email"
                    android:drawablePadding="20dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="0dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/cinza" />

                <EditText
                    android:id="@+id/cadastro_email_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cadastro_style_edit_nome"
                    android:drawableLeft="@drawable/icone_email"
                    android:drawablePadding="20dp"
                    android:hint="Confirme seu email"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="0dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/cinza" />

                <EditText
                    android:id="@+id/cadastro_senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cadastro_style_edit_nome"
                    android:drawableLeft="@drawable/icone_senha_"
                    android:drawablePadding="20dp"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:paddingBottom="0dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/cinza" />

                <EditText

                    android:id="@+id/cadastro_senha_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cadastro_style_edit_nome"
                    android:drawableLeft="@drawable/icone_senha_"
                    android:drawablePadding="20dp"
                    android:hint="Confirme sua senha"
                    android:inputType="textPassword"
                    android:paddingBottom="0dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/cinza" />


                <ImageView
                    android:id="@+id/btConfirm"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:onClick="btCadastrar"
                    android:src="@drawable/seta_proximo" />
            </LinearLayout>


        </FrameLayout>
    </ScrollView>


</LinearLayout>

