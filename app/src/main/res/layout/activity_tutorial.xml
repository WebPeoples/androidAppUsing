<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.goku.using.activity.TutorialActivity">

    <ImageSwitcher
        android:src="@drawable/tela_um"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:id="@+id/imgTutorial"
        android:scaleX="1.20"
        android:scaleY="1.10"
         />

    <Button
        android:background="@drawable/botao_certo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonTutorial" />

</RelativeLayout>
