<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="15dp"
    card:cardBackgroundColor="@color/branco"
    card:cardCornerRadius="10dp"
    card:cardElevation="5dp"
    card:contentPadding="10dp"
    card:theme="@style/CardView.Dark"
    android:layout_gravity="end"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/porcentagemPreco"
                android:textColor="@color/branco"
                android:padding="3dp"
                android:background="@color/rosa"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/card_produto_logo_produto"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"/>

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/imageView2"
                        android:src="@drawable/using"
                        android:layout_width="wrap_content"
                        android:layout_height="115dp"/>

                    <TextView
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/ifPromo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/rosa"
                        android:padding="2dp"
                        android:text="@string/em_promo_o"
                        android:textColor="@color/branco"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Almofadas Confort - Pequena "
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:id="@+id/cardText"
                        android:textColor="@color/azul"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>


                    <TextView
                        android:id="@+id/placaDetalhe"
                        android:text="@string/detalhes"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/branco"
                        android:background="@color/azul"
                        android:drawableStart="@drawable/ic_add_pink"
                        android:drawableLeft="@drawable/ic_add_pink"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>



                    <TextView

                        android:id="@+id/textView"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="30dp"
                        android:text="R$ 60,00"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_gravity="end|bottom"
                        android:textColor="@color/branco"
                        android:background="@color/rosa"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"/>

                    <TextView
                        android:id="@+id/oldPrice"
                        android:textColor="@color/cinza_mais_escuro"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>







</android.support.v7.widget.CardView>